<?xml version="1.0" encoding="UTF-8"?>
<fruchtzwerg-definition>
	<Global>
		<browser>Firefox</browser>
		<sleep_interval>50</sleep_interval>
		<iterations>20</iterations>
		<warmup>true</warmup>
		<halt_between_tests>false</halt_between_tests>
	</Global>
	<WANem>
		<host>127.0.0.1</host>
		<bothways>true</bothways>
	</WANem>
	<Tests>
		<TestCase>
			<proxy>localhost:8080</proxy>
			<url>http://127.0.0.1/index.html</url>
			<network>
				<!-- Default network -->
				<bandwidth>0</bandwidth>
				<delay>0</delay>
				<packet-loss>0</packet-loss>
			</network>
		</TestCase>
		<TestCase>
			<proxy>localhost:8080</proxy>
			<url>http://127.0.0.1/index.html</url>
			<network>
				<!-- DSL light -->
				<bandwidth>768</bandwidth>
				<delay>50</delay>
				<packet-loss>0</packet-loss>
			</network>
		</TestCase>
		<TestCase>
			<proxy>localhost:8080</proxy>
			<url>http://127.0.0.1/index.html</url>
			<network>
				<!-- HSDPA category 6 -->
				<bandwidth>3600</bandwidth>
				<delay>100</delay>
				<packet-loss>0</packet-loss>
			</network>
		</TestCase>
	</Tests>
</fruchtzwerg-definition>